<div class="contents row">
  <div class="container">
    <%= form_for(@blog) do |f| %>
      <div style="margin: 30px 0">
        <%= f.text_area :text, placeholder: '記事を書いて', value: '' %>
      </div>
      <div class="row">
        <div class="col10 push1">
          <%= button_tag type: "submit", class: "btn btn--block" do %>
          投稿する<i class="icon-arrow-right"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
